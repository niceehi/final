#include <graphics.h>
#include <conio.h>

int main()
{
    int gd = DETECT, gm;
    initgraph(&gd, &gm, "");

    /* Лицо */
    setcolor(YELLOW);
    setfillstyle(SOLID_FILL, YELLOW);
    circle(250, 200, 100);
    floodfill(250, 200, YELLOW);

    /* Глаза */
    setcolor(BLACK);
    setfillstyle(SOLID_FILL, BLACK);
    fillellipse(220, 180, 8, 12);
    fillellipse(280, 180, 8, 12);

    /* Рот (грустный) */
    arc(250, 240, 20, 160, 40);

    /* Слёзы */
    setcolor(LIGHTBLUE);
    setfillstyle(SOLID_FILL, LIGHTBLUE);

    ellipse(220, 210, 0, 360, 5, 10);
    floodfill(220, 210, LIGHTBLUE);

    ellipse(280, 210, 0, 360, 5, 10);
    floodfill(280, 210, LIGHTBLUE);

    getch();
    closegraph();
    return 0;
}